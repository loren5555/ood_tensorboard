cluster:
  - "epic"

form:
  - auto_queues
  - cpus
  - bc_num_hours
  - logdir
  - auto_accounts

attributes:
  resource_partition:
    display: true
    label: "Resource Partition"
    widget: "text_field"
    readonly: true
    value: "cpu"

  cpus: 1

  bc_num_hours:
    label: "Number of hours (max 24h)"
    value: 1
    min: 0
    max: 24
    display: true

  logdir:
    label: "Tensorboard Log Directory"
    widget: "path_selector"
    required: true
    display: true
    directory: "<%= ENV['HOME'] %>"
    cacheable: false
